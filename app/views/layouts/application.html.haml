!!! 5
%html
  %head
    %title Rotten Potatoes!
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'jquery/styles/jquery-ui-1.10.2.custom.min'
    = stylesheet_link_tag 'kendo/styles/kendo.common.min.css'
    = stylesheet_link_tag 'kendo/styles/kendo.default.min.css'    
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %h1.title Rotten Potatoes!
    #main
      - if flash[:notice]
        #message_container
          #notice.message= flash[:notice]
      - elsif flash[:warning]
        #message_container
          #warning.message= flash[:warning]

      = yield
