-# in app/views/movies/show.html.haml
%h4 Details about #{@movie.title}
%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")
  %li
    Director:
    = @movie.director

%h4 Description:

%p#description= @movie.description

= link_to 'Edit', edit_movie_path(@movie), :class => 'btn btn-primary'
= link_to 'Find Movies With Same Director', movie_movies_by_director_path(@movie), :class => 'btn btn-primary'
= link_to 'Back to movie list', movies_path, :class => 'btn btn-primary'
<br/><br/>
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger'
